<h2 class='is-size-3 has-text-weight-light'>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :first_name, class: 'label' %>
    <%= f.text_field :first_name, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :last_name, class: 'label' %>
    <%= f.text_field :last_name, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input' %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class=''>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <i class='help'>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, class: 'input' %>
    <% if @minimum_password_length %>
      <em class='help'><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: 'label' %>
    <%= f.password_field :password_confirmation, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :current_password, class: 'label' %>
    <i class='help'>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, class: 'input' %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: 'button is-success' %>
  </div>
<% end %>
<h3 class='is-size-4'>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button is-danger' %></p>
<%= link_to "Back", :back %>

<h2 class='is-size-3 has-text-weight-light'>Resend confirmation instructions</h2>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'input' %>
  </div>
  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'button is-success is-fullwidth' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

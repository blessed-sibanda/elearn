<div class="columns">
  <aside class="column is-one-quarter-desktop">
    <p class="menu-label">Modules</p>
    <ul class="menu-list">
      <li>
        <%= link_to 'All Modules', @course %>
      </li>
      <% @course.modules.each do |m| %>
        <li>
          <%= link_to course_module_path(m.course, m), class: "#{'is-active' if m.id == params[:id]}" do %>
            <span><%= m.order %>.</span>
            <span><%= m.title %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </aside>
  <main class='column is-three-quarters-tablet'>
    <h1 class="title"><%= @course.title %></h1>
    <hr class='my-1'>
    <h2 class="subtitle is-size-3 has-text-weight-light"><%= @module.title %></h2>
    <div><%= @module.description %></div>
    <hr>
    <div><%= @module.content %></div>
  </main>
</div>

<%= form_for @module do |f| %>
  <%= render 'devise/shared/error_messages', resource: @module %>
  <div class="field">
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: 'input is-medium' %>
  </div>
  <div class="field">
    <%= f.label :description, class: 'label' %>
    <%= f.text_area :description, class: 'textarea' %>
  </div>
  <div class="field">
    <%= f.label :content, class: 'label' %>
    <%= f.rich_text_area :content %>
  </div>
  <div class="field">
    <%= f.submit class: 'button is-primary' %>
  </div>
<% end %>

<hr>
<div class="level">
  <div class="level-left">
    <div>
      <p class="title is-5 is-marginless mb-2">
        <%= link_to truncate(course.title,length: 26), '#' %>
      </p>
      <p class='mt-3'>
        by: <%= content_tag :strong, course.owner.full_name %>
      </p>
    </div>
  </div>
  <div class="level-right">
    <div class="has-text-right">
      <p class="title is-5 is-marginless tag is-warning mb-2 is-light">
        <%= pluralize(rand(20..50), 'student') %>
      </p>
      <p class='is-size-7'>
        <%= course.created_at.to_s(:long) %>
      </p>
    </div>
  </div>
</div>
